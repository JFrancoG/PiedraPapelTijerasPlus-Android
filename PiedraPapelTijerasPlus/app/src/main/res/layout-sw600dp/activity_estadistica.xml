<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.games.apps.drpuerk.piedrapapeltijerasplus.Estadistica"
    android:background="@drawable/fondoverticalturquesa">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" >

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnAjustesEst"
                android:src="@drawable/ajustest"
                android:onClick="pulsaAjustesE"
                android:contentDescription="@string/Ajustes"
                android:background="#00ffffff"
                android:layout_weight="0.2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/tvEstadistica"
                android:id="@+id/tvEstadisticat"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:textColor="@color/morado"
                android:textSize="42sp"
                android:layout_weight="1" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_weight="0.2" />
        </LinearLayout>

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_weight="1.8"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivfotoestadt"
                android:src="@drawable/anonimogt"
                android:contentDescription="@string/ivfotoperfil"
                android:layout_gravity="center"
                android:scaleType = "centerInside"
                android:layout_weight="0.5"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivCirculoEstt"
                android:src="@drawable/circulogt"
                android:layout_gravity="center" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/tvNick"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:textColor="@color/cielo"
            android:textSize="28sp"/>

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_weight="0.2" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="3">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/tvGanadas"
                    android:id="@+id/tvGanadas"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:textColor="#147d09"
                    android:textSize="30sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/tvPerdidas"
                    android:id="@+id/tvPerdidas"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:textColor="#ff0206"
                    android:textSize="30sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/tvTablas"
                    android:id="@+id/tvTablas"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:textColor="#bcb403"
                    android:textSize="30sp"/>
            </LinearLayout>

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="0"
                    android:id="@+id/tvPorcGan"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:textColor="#067a06"
                    android:textSize="30sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="0"
                    android:id="@+id/tvPorcPerd"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:textColor="#ff030b"
                    android:textSize="30sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="0"
                    android:id="@+id/tvPorcTab"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:textColor="#b4ac06"
                    android:textSize="30sp"/>
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="20px"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2.5">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/btnCambiarModo"
                android:id="@+id/btnCambiarModo"
                android:drawableTop="@drawable/volver48azul"
                android:contentDescription="@string/btnCambiarModo"
                android:onClick="pulsaCambiarModo"
                android:padding="10dp"
                android:layout_weight="1"
                android:background="@drawable/btnmain"
                android:textColor="@color/morado"
                android:layout_gravity="center_vertical"
                android:textSize="20sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/btnEmpezar"
                android:id="@+id/btnEmpezar"
                android:drawableTop="@drawable/play48"
                android:contentDescription="@string/btnEmpezar"
                android:onClick="pulsaEmpezar"
                android:padding="10dp"
                android:layout_weight="1"
                android:background="@drawable/btnmain"
                android:textColor="@color/morado"
                android:layout_gravity="center_vertical"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
