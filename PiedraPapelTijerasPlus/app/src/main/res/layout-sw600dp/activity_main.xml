<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.games.apps.drpuerk.piedrapapeltijerasplus.MainActivity"
    android:background="@drawable/fondoverticalturquesa">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/tvTituloPpal"
            android:id="@+id/tvTituloPpal"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:textColor="@color/morado"
            android:textSize="40sp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/tvSinopsis1"
            android:id="@+id/tvSinopsis1"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/morado"
            android:textSize="34sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/tvSinopsis2"
            android:id="@+id/tvSinopsis2"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_weight="2"
            android:textColor="@color/morado"
            android:textSize="30sp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.5">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="2.3" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/btnEntrar"
                android:id="@+id/btnEntrar"
                android:drawableTop="@drawable/entrar64"
                android:contentDescription="@string/btnEntrar"
                android:onClick="pulsaEntrar"
                android:padding="10dp"
                android:layout_weight="2"
                android:background="@drawable/btnmain"
                android:textColor="@color/morado"
                android:layout_gravity="center_vertical"
                android:textSize="28sp" />
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="2.3" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
